<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jkdajac.screenlighter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/flashlight"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScreenLighter">
        <activity android:name=".WhiteActivity"></activity>
        <activity android:name=".BlueActivity" />
        <activity android:name=".YellowActivity" />
        <activity android:name=".GreenActivity" />
        <activity android:name=".RedActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>